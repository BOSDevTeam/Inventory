@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

    <script type="text/javascript">
        document.getElementById('menuInvoice').className = 'active';
    </script>
</head>

<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Invoices</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="~/Invoice/InvoiceSetup" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Create Invoice</a>
    </div>
</div>

<div class="row filter-row">
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus">
            <label class="focus-label">From</label>
            <div class="cal-icon">
                <input class="form-control floating datetimepicker" type="text">
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus">
            <label class="focus-label">To</label>
            <div class="cal-icon">
                <input class="form-control floating datetimepicker" type="text">
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus" style="display:block">
            <label class="focus-label">Invoice No.</label>
            <div class="">
                <input class="form-control floating" type="text">
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3" style="width:100%">
        <a href="#" class="btn btn-success" style="width:75%"> Search </a>
        <a href="#" class="btn btn-white" style="width:15%"><i class="fa fa-refresh"></i></a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped custom-table mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Invoice Number</th>
                        <th>Invoice Date</th>
                        <th>Patient</th>
                        <th>Doctor</th>                      
                        <th class="text-right">Amount(MMK)</th>                      
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td><a href="invoice-view.html">#INV-0001</a></td>
                        <td>1 Jan 2022</td>
                        <td>Patient Name</td>  
                        <td>Doctor Name</td>                       
                        <td class="text-right">20,000</td>
                        <td class="text-right">
                            <div class="dropdown dropdown-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="~/Invoice/InvoiceSetup"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    <a class="dropdown-item" href="~/Invoice/InvoiceDetail"><i class="fa fa-eye m-r-5"></i> View</a>
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_invoice"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td><a href="invoice-view.html">#INV-0002</a></td>
                        <td>1 Jan 2022</td>
                        <td>Patient Name</td>
                        <td>Doctor Name</td>
                        <td class="text-right">20,000</td>
                        <td class="text-right">
                            <div class="dropdown dropdown-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="~/Invoice/InvoiceSetup"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    <a class="dropdown-item" href="~/Invoice/InvoiceDetail"><i class="fa fa-eye m-r-5"></i> View</a>
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_invoice"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td><a href="invoice-view.html">#INV-0003</a></td>
                        <td>1 Jan 2022</td>
                        <td>Patient Name</td>
                        <td>Doctor Name</td>
                        <td class="text-right">20,000</td>
                        <td class="text-right">
                            <div class="dropdown dropdown-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="~/Invoice/InvoiceSetup"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    <a class="dropdown-item" href="~/Invoice/InvoiceDetail"><i class="fa fa-eye m-r-5"></i> View</a>
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_invoice"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="delete_invoice" class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                <h3>Are you sure want to delete this Invoice?</h3>
                <div class="m-t-20">
                    <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>



