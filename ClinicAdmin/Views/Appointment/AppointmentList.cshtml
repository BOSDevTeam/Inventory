@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

    <script type="text/javascript">
        document.getElementById('menuAppointment').className = 'active';
    </script>
</head>

<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Appointments</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="~/Appointment/AppointmentSetup" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Appointment</a>
    </div>
</div>

<div class="row filter-row">
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus">
            <label class="focus-label">From</label>
            <div class="cal-icon">
                <input class="form-control floating datetimepicker" type="text">
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus">
            <label class="focus-label">To</label>
            <div class="cal-icon">
                <input class="form-control floating datetimepicker" type="text">
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus" style="display:block">
            <label class="focus-label">Doctor</label>
            <div>
                <select class="select form-control floating">
                    <option>Select</option>
                    <option>Doctor Name</option>
                    <option>Doctor Name</option>
                    <option>Doctor Name</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3" style="width:100%">
        <a href="#" class="btn btn-success" style="width:75%"> Search </a>
        <a href="#" class="btn btn-white" style="width:15%"><i class="fa fa-refresh"></i></a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped custom-table">
                <thead>
                    <tr>
                        <th>Doctor Name</th>
