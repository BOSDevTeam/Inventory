<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="#" class="logo">
                    <img src="~/assets/img/logo.png" width="35" height="35" alt="">
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <div class="page-title-box float-left">
                <h3>QuickClinic</h3>
            </div>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
                <li class="nav-item dropdown d-none d-sm-block" title="View Appointment">
                    <a href="~/Appointment/ViewAppointment" class="nav-link"><i class="fa fa-calendar"></i></a>
                </li>
                <li class="nav-item dropdown d-none d-sm-block" title="Create Invoice">
                    <a href="~/Invoice/InvoiceSetup" class="nav-link"><i class="fa fa-dollar"></i></a>
